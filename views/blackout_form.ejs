<%- include('partials/header', { title: 'Manage Blackout Dates' }) %>

<div class="max-w-xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Manage Blackout Dates</h1>

  <form action="/admin/add-blackout" method="POST" class="space-y-4 bg-white p-6 rounded-xl shadow">
    <div>
      <label for="blackout_date" class="block text-sm font-medium text-gray-700 mb-1">Select Date:</label>
      <input type="date" id="blackout_date" name="date" required
             class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-orange-400">
    </div>

    <button type="submit"
            class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg font-semibold transition">
      Block This Date
    </button>
  </form>
</div>

<%- include('partials/footer') %>
