<%- include('partials/header') %>

<div class="min-h-screen bg-[#fddbb3] px-4 py-10">
  <div class="mx-auto w-full max-w-[95vw] sm:max-w-[500px] md:max-w-[600px] bg-white rounded-2xl shadow-xl p-6 text-gray-800">
    <h1 class="text-2xl font-bold text-center mb-6 text-orange-600">Review Your Booking</h1>

    <div class="space-y-2 text-sm">
      <p><strong>First Name:</strong> <%= user_name %></p>
      <p><strong>Surname:</strong> <%= surname %></p>
      <p><strong>Email:</strong> <%= user_email %></p>
      <p><strong>Phone:</strong> <%= phone_prefix %><%= contact_number %></p>
      <p><strong>Course:</strong> <%= course %></p>
      <p><strong>Accommodation:</strong> <%= accommodation %></p>
      <% if (extra) { %><p><strong>Extra:</strong> <%= extra %></p><% } %>
      <p><strong>Taxi Required:</strong> <%= taxi_required %></p>
      <p><strong>Arrival Date:</strong> <%= arrival_date %></p>
      <p><strong>Departure Date:</strong> <%= departure_date %></p>
      <p><strong>Location:</strong> <%= restaurant %></p>
      <p><strong>Payment Method:</strong> <%= payment_method === 'cash' ? 'Cash' : 'Pay Online' %></p>
    </div>

    <div class="mt-6 text-lg font-semibold">
      <p>Total: €<%= total_price %></p>
      <p>Deposit: €<%= deposit %></p>
    </div>

    <form action="/submit-booking" method="POST" class="space-y-4 mt-8">
      <%- hiddenFields %>
      <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-lg font-semibold text-lg transition">
        Confirm Booking
      </button>
      <a href="javascript:history.back()" class="block text-center bg-gray-300 hover:bg-gray-400 text-gray-900 py-3 rounded-lg font-semibold text-lg transition">
        Edit Details
      </a>
    </form>
  </div>
</div>

<%- include('partials/footer') %>