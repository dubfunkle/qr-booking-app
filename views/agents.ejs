<%- include('partials/header', { title: 'All Agents' }) %>

<div class="max-w-6xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">All Agents</h1>

  <div class="overflow-x-auto bg-white rounded-xl shadow">
    <table class="min-w-full text-sm text-center border border-gray-300">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="py-2 px-3 border-b">ID</th>
          <th class="py-2 px-3 border-b">Name</th>
          <th class="py-2 px-3 border-b">Commission (%)</th>
          <th class="py-2 px-3 border-b">QR Code</th>
        </tr>
      </thead>
      <tbody>
        <% agents.forEach(agent => { %>
          <tr class="even:bg-gray-50 hover:bg-orange-50 transition">
            <td class="py-2 px-3 border-b"><%= agent.id %></td>
            <td class="py-2 px-3 border-b whitespace-nowrap"><%= agent.name %></td>
            <td class="py-2 px-3 border-b"><%= agent.commission_rate %></td>
            <td class="py-2 px-3 border-b">
              <img src="/<%= agent.qr_code %>" alt="QR Code" class="mx-auto rounded-md shadow-sm" width="100">
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="mt-6 flex flex-wrap gap-4">
    <a href="/" class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-800 px-4 py-2 rounded-md text-sm font-medium transition">
      Home
    </a>
    <a href="/admin" class="inline-block bg-gray-300 hover:bg-gray-400 text-gray-900 px-4 py-2 rounded-md text-sm font-medium transition">
      Back to Admin
    </a>
  </div>
</div>

<%- include('partials/footer') %>
