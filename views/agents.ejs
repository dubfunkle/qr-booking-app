<%- include('partials/header', { title: 'All Agents' }) %>

<div class="container mt-5">
    <h1 class="mb-4">All Agents</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Agent ID</th>
                <th>Name</th>
                <th>Commission Rate (%)</th>
                <th>QR Code</th>
            </tr>
        </thead>
        <tbody>
            <% agents.forEach(agent => { %>
                <tr>
                    <td><%= agent.id %></td>
                    <td><%= agent.name %></td>
                    <td><%= agent.commission_rate %>%</td>
                    <td><img src="/<%= agent.qr_code %>" alt="QR Code" width="100"></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary me-2">Home</a>
        <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>
</div>

<%- include('partials/footer') %>
