<%- include('partials/header', { title: 'All Agents' }) %>

<div class="container mt-5">
    <h1 class="mb-4">All Agents</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-sm align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Commission (%)</th>
                    <th>QR Code</th>
                </tr>
            </thead>
            <tbody>
                <% agents.forEach(agent => { %>
                    <tr>
                        <td><%= agent.id %></td>
                        <td class="text-nowrap"><%= agent.name %></td>
                        <td><%= agent.commission_rate %></td>
                        <td><img src="/<%= agent.qr_code %>" alt="QR Code" class="img-thumbnail" width="100"></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary me-2">Home</a>
        <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>
</div>

<%- include('partials/footer') %>
