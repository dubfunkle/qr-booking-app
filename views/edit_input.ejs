<%- include('partials/header') %>

<div class="max-w-xl mx-auto py-8">
  <a href="/admin/inputs" class="inline-block mb-4 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4 rounded-lg font-semibold">
    ← Back to Inputs
  </a>

  <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Input</h1>

  <form action="/admin/inputs/edit/<%= input.id %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
      <input type="text" id="name" name="name" value="<%= input.name %>" required
             class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-orange-400 focus:border-orange-400">
    </div>

    <div>
      <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
      <select id="type" name="type" required
              class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-orange-400 focus:border-orange-400">
        <option value="course" <%= input.type === 'course' ? 'selected' : '' %>>Course</option>
        <option value="accommodation" <%= input.type === 'accommodation' ? 'selected' : '' %>>Accommodation</option>
        <option value="extra" <%= input.type === 'extra' ? 'selected' : '' %>>Extra</option>
      </select>
    </div>

    <div>
      <label for="price" class="block text-sm font-medium text-gray-700">Price (€)</label>
      <input type="number" step="0.01" id="price" name="price" value="<%= input.price %>" required
             class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-orange-400 focus:border-orange-400">
    </div>

    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg font-semibold">
      Save Changes
    </button>
  </form>
</div>

<%- include('partials/footer') %>
