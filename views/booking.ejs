<%- include('partials/header', { title: 'Book Your Course' }) %>

<div class="min-h-screen bg-gradient-to-br from-orange-100 to-orange-200 flex justify-center items-start px-4 py-8">
  <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-6">
    <div class="text-center mb-6">
      <img src="/am_logo.png" alt="AM Language" class="h-20 mx-auto mb-3">
      <h1 class="text-2xl font-bold text-gray-800">Welcome to AM Language</h1>
      <p class="text-gray-500 text-sm">Book your English course below</p>
    </div>

    <form action="/preview-booking" method="POST" class="space-y-4">
      <input type="hidden" name="agentId" value="<%= agentId %>">

      <div class="text-sm text-gray-600">
        <span class="font-semibold text-gray-800">Referred by:</span> <%= agentName %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <input type="text" name="user_name" placeholder="First Name" class="form-input rounded-lg w-full" required>
        <input type="text" name="surname" placeholder="Surname" class="form-input rounded-lg w-full" required>
      </div>

      <input type="email" name="user_email" placeholder="Email Address" class="form-input rounded-lg w-full" required>
      <input type="text" name="contact_number" placeholder="Contact Number (+Country Code)" class="form-input rounded-lg w-full" required>
      <input type="text" name="restaurant" placeholder="Where was QR scanned?" class="form-input rounded-lg w-full" required>

      <select name="course" class="form-select rounded-lg w-full" required>
        <option value="">Select Course</option>
        <option value="General English - EUR250">General English (15hrs/week) - €250</option>
        <option value="Business English 15hrs - EUR400">Business English (15hrs/week) - €400</option>
        <option value="Business English 25hrs - EUR500">Business English (25hrs/week) - €500</option>
        <option value="IELTS - EUR250">IELTS Prep (15hrs/week) - €250</option>
      </select>

      <select name="accommodation" class="form-select rounded-lg w-full">
        <option value="">Accommodation (optional)</option>
        <option value="Host Family Single - EUR290">Host Family Single - €290 (Low Season)</option>
        <option value="Host Family Single - EUR380">Host Family Single - €380 (Summer)</option>
        <option value="Host Family Sharing - EUR240">Host Family Sharing - €240 (Low Season)</option>
        <option value="Host Family Sharing - EUR275">Host Family Sharing - €275 (Summer)</option>
        <option value="Apartment Single - EUR330">Apartment Single - €330 (Low Season)</option>
        <option value="Apartment Single - EUR570">Apartment Single - €570 (Summer)</option>
        <option value="Apartment Sharing - EUR165">Apartment Sharing - €165 (Low Season)</option>
        <option value="Apartment Sharing - EUR285">Apartment Sharing - €285 (Summer)</option>
        <option value="Hotel">Hotel (price on request)</option>
      </select>

      <div class="flex gap-4 items-center text-sm text-gray-700">
        <span>Taxi Required (€46)?</span>
        <label class="inline-flex items-center">
          <input type="radio" name="taxi_required" value="Yes" class="mr-2"> Yes
        </label>
        <label class="inline-flex items-center">
          <input type="radio" name="taxi_required" value="No" checked class="mr-2"> No
        </label>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <input type="date" name="arrival_date" class="form-input rounded-lg w-full" placeholder="Arrival Date">
        <input type="date" name="departure_date" class="form-input rounded-lg w-full" placeholder="Departure Date">
      </div>

      <button type="submit" class="w-full bg-orange-500 hover:bg-orange-600 text-white py-3 rounded-lg font-semibold text-lg transition">
        Continue to Review
      </button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
