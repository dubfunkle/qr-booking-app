<%- include('partials/header', { title: 'All Bookings' }) %>

<div class="container mt-5">
    <h1 class="mb-4">All Bookings</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Agent</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Restaurant</th>
                    <th>Course</th>
                    <th>Accommodation</th>
                    <th>Taxi</th>
                    <th>Arrival</th>
                    <th>Departure</th>
                    <th>Agent Commission (€)</th>
                    <th>Your Commission (€)</th>
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(row => { %>
                    <tr>
                        <td><%= row.booking_id %></td>
                        <td><%= row.agent_name %></td>
                        <td><%= row.user_name %></td>
                        <td><%= row.surname || '' %></td>
                        <td><%= row.contact_number || '' %></td>
                        <td><%= row.user_email %></td>
                        <td><%= row.restaurant || '' %></td>
                        <td><%= row.course %></td>
                        <td><%= row.accommodation || 'None' %></td>
                        <td><%= row.taxi_required || 'No' %></td>
                        <td><%= row.arrival_date || '' %></td>
                        <td><%= row.departure_date || '' %></td>
                        <td>€<%= row.agent_commission.toFixed(2) %></td>
                        <td>€<%= row.platform_commission.toFixed(2) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary me-2">Home</a>
        <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>
</div>

<%- include('partials/footer') %>
