<%- include('partials/header', { title: 'Admin Login' }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="w-full max-w-sm bg-white rounded-xl shadow-md p-6">
    <h3 class="text-xl font-semibold text-center text-gray-800 mb-6">Login</h3>

    <form method="POST" action="/login" class="space-y-4">
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <input type="text" name="username" id="username" required
               class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange-400 focus:outline-none">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" id="password" required
               class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange-400 focus:outline-none">
      </div>

      <div>
        <button type="submit"
                class="w-full bg-orange-500 hover:bg-orange-600 text-white py-3 rounded-lg font-semibold transition">
          Login
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
